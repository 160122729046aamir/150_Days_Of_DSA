class Solution(object):
    def maximumGain(self, s, x, y):
        
        def remove_pairs(s, first, second, gain):
            stack = []
            score = 0
            for char in s:
                if stack and stack[-1] == first and char == second:
                    stack.pop()
                    score += gain
                else:
                    stack.append(char)
            return "".join(stack), score
        
        total = 0
        if x > y:
            s, score = remove_pairs(s, 'a', 'b', x)
            total += score
            s, score = remove_pairs(s, 'b', 'a', y)
            total += score
        else:
            s, score = remove_pairs(s, 'b', 'a', y)
            total += score
            s, score = remove_pairs(s, 'a', 'b', x)
            total += score

        return total



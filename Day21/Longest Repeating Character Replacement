class Solution(object):
    def characterReplacement(self, s, k):
        l=0
        count={}
        maxl=0
        window=''
        for r in range(len(s)):
            count[s[r]]=1+count.get(s[r],0)
            window+=s[r]
            while l<len(s) and len(window)-max(count.values())>k:
                count[s[l]]-=1
                window=window[1:]
                l+=1
            maxl=max(maxl,r-l+1)
        return maxl
        

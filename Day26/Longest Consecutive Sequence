class Solution(object):
    def longestConsecutive(self, nums):
        if not nums:
            return 0
        nums=sorted(set(nums))
        cursteak=1
        longeststeak=1
        for l in range(1,len(nums)):
            if nums[l]==nums[l-1]+1:
                cursteak+=1
            else:
                longeststeak=max(longeststeak,cursteak)
                cursteak=1
        longeststeak=max(longeststeak,cursteak)
        return longeststeak
            



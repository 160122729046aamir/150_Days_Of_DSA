class Solution:
    def validMountainArray(self, arr: List[int]) -> bool:
        n=len(arr)
        idx=0
        if n<3:
            return False
        for i in range(1,n-1):
            if arr[i-1]<arr[i]>arr[i+1]:
                idx=i
                break
        if idx==0:
            return False
        for i in range(0,idx):
            if arr[i+1]<=arr[i]:
                return False
        for i in range(idx+1,n):
            if arr[i-1]<=arr[i]:
                return False
        return True
